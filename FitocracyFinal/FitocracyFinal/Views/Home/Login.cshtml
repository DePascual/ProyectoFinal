<div id="modalLogin" class="modal fade" tabindex="-1" role="dialog" ng-controller="loginCtrl">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Hey Fitocrat!</h4>
            </div>

            <div class="modal-body">
                <p>Log In to continue tracking your workouts, developing healthy habits, and reaching your goals with the help of our expert coaches.</p>

                <div name="loginForm">

                    <div class="row">
                        <div class="col-lg-2"></div>
                        <div class="form-group col-lg-8">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input id="uName" type="text" class="form-control" placeholder="userName" ng-model="uName" required />
                            </div>
                        </div>
                        <div class="col-lg-2"></div>
                    </div>

                    <div class="row">
                        <div class="col-lg-2"></div>
                        <div class="form-group col-lg-8">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input id="uPass" type="password" class="form-control" placeholder="*********" ng-model="uPass" required />
                            </div>
                        </div>
                        <div class="col-lg-2"></div>
                    </div>

                    <div class="form-group text-center">
                        <span><a href="@Url.Action("ForgotPassword", "Home")">I forgot my username or password</a></span>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <span class="pull-left"><a ng-click="irARegistro()">I want to create a new account</a></span>
                <button class="btn btn-primary" ng-click="logear()">Submit</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->