@model FitocracyFinal.ViewModels.WorkoutTracksTablaDatosVM
@using FitocracyFinal.Models


<div class="center">   
    @{

        Workouts workout = Model.workoutVM;
        Tracks[] tracks = Model.tracksVM;

        TempData["workOut"] = Model;
    }
    
    <div class="center">
        <h2 style="text-align:center; color:#1f2b32">@workout.Nombre</h2>
    </div>
   
    <div class="table-responsive">
        <table id="tablaWorkout" class="table table-striped center" style="text-align:center; width:100%; height:100%">
            <tr>
                <th style="text-align:center;color:#1f2b32; font-size:medium">Work</th>
                <th style="text-align:center;color:#1f2b32; font-size:medium">Sets</th>
                <th style="text-align:center;color:#1f2b32; font-size:medium">Repetitions</th>
            </tr>
            @{
                foreach (var track in tracks)
                {
                    <tr>
                        <td>
                            <p style="color:#1F2B32; font-size:medium;">@track.Nombre</p>
                        </td>
                        <td>
                            <p style="font-size:medium;">@track.Series</p>
                        </td>
                        <td>
                            <p style="font-size:medium;">@track.Repeticiones</p>
                        </td>
                    </tr>
                }
            }
            <tr>
                <td colspan="3" style="text-align:center">
                    <input id="buttonStart" type="submit" class="tn btn-primary btn-lg center" value="Let's gooo!!!" />
                    @*<button id="buttonStart" class="btn btn-primary btn-lg center" style="width:300px" ng-click="startWorkout()">Let's gooo!!!</button>*@
                </td>
            </tr>
        </table>
    </div>
</div>

<script>
    $('#buttonStart').click(function () {
        $('#vistaParcial').empty();
        $('#vistaParcial').load("http://localhost:2841/PartialsViews/WorkoutCarruselPV");
    })
</script>