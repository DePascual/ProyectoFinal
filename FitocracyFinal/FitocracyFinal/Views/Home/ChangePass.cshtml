<div id="modalChangePass" class="modal fade" tabindex="-1" role="dialog" ng-controller="changePassCtrl">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Ups I have forgotten the password!!</h4>
            </div>

            <div class="modal-body">

                <div id="errorLogin" style="display:none" class="text-center text-danger">
                    <h3>Incorrect login!!</h3>
                </div>

                <form name="changePassForm" novalidate>
                    <div class="row">
                        <div class="col-lg-2"></div>
                        <div class="form-group col-lg-8">
                            <div class="input-group" ng-class="{'has-error':changePassForm.uEmail.$invalid && !changePassForm.uEmail.$pristine}">
                                <span class="input-group-addon">Email</span>
                                <input id="uEmail" name="uEmail" type="email" class="form-control" placeholder="userName@email.com" ng-model="uEmail" ng-required="true" />
                            </div>
                            <p ng-show="changePassForm.uEmail.$invalid && !changePassForm.uEmail.$pristine" class="help-block">Enter a valid email</p>
                        </div>
                        <div class="col-lg-2"></div>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" class="btn btn-primary btn-lg" ng-click="generaNuevaPass(changePassForm.$valid)" ng-disabled="changePassForm.$invalid" value="Submit" />
                        <br />
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" ng-click="cerrar()">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div id="modalChangesPassOK" class="modal fade" tabindex="-1" role="dialog" ng-controller="changePassCtrl">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>CHANGES OK!!</h2>
            </div>

            <div class="modal-body">
                <p>We have sent an email whit your new Password!!</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" ng-click="cerrarAlert()">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
