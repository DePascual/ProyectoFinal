@model FitocracyFinal.Models.Usuario
<div class="center" id="userInfoDiv" style="background-color:#f8f8f8; border:1px solid #e7e7e7" ng-controller="youCtrl">

    {{mensa}}
    <form name="userForm" novalidate>

        <div class="row">
            <div class="col-lg-2"></div>
            <div class="form-group col-lg-8">
                <div class="input-group" ng-class="{'has-error':userForm.uName.$invalid && !userForm.uName.$touched}">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input id="uName" name="uName" type="text" class="form-control" placeholder="userName" ng-model="uName" ng-required="true" ng-minlength="3" ng-maxlength="15" />
                </div>
                <p ng-show="userForm.uName.$invalid && !userForm.uName.$touched" class="help-block">Enter a valid name</p>
            </div>
            <div class="col-lg-2"></div>
        </div>

        <div class="row">
            <div class="col-lg-2"></div>
            <div class="form-group col-lg-8">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input id="uEmail" name="uEmail" type="text" class="form-control" value="@Model.Email" readonly />
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>

        <div class="row">
            <div class="col-lg-2"></div>
            <div class="form-group col-lg-8">
                <div class="input-group" id="divBirthday">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input id="uBirthday" name="uBirthday" type="text" class="form-control" placeholder="@DateTime.Today.ToString("dd/MM/yyyy")"/>
                </div>
              
            </div>
            <div class="col-lg-2"></div>
        </div>

        <script>
            $('#divBirthday input').datepicker({
            });
        </script>

        <div class="row">
            <div class="col-lg-2"></div>
            <div class="form-group col-lg-8">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <textarea id="uDescripcion" name="uDescripcion" type="text" class="form-control" placeholder="User Description" ng-model="uDescripcion" ng-maxlength="200" />
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>





