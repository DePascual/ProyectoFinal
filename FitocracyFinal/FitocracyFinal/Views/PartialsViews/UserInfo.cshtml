@model FitocracyFinal.Models.Usuario
<div class="center" id="userInfoDiv" style="background-color:#f8f8f8; border:1px solid #e7e7e7" ng-controller="youCtrl">

    <form name="userForm" novalidate>

        <!--USERNAME-->
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="form-group col-lg-8">
                <div class="input-group" ng-class="{'has-error':userForm.uName.$error}">
                    <span class="input-group-addon"><i class="fa fa-user"></i> Username: </span>
                    <input id="Username" name="uName" type="text" class="form-control ng-neutro" placeholder="userName"  ng-model="uName" ng-minlength="3" ng-maxlength="15" />
                </div>
                <p ng-show="userForm.uName.$error.minlength" class="help-block">Enter a valid name</p>
                <p ng-show="userForm.uName.$error.maxlength" class="help-block">Enter a valid name</p>
            </div>
            <div class="col-lg-2"></div>
        </div>

        <!--EMAIL-->
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="form-group col-lg-8">
                <div class="input-group" >
                    <span class="input-group-addon"><i class="fa fa-envelope"></i> Email: </span>
                    <input id="uEmail" name="uEmail" type="text" class="form-control ng-neutro" placeholder="@Model.Email" ng-readonly="true" ng-model="uEmail" />
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>

        <!--BIRTHDAY-->
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="form-group col-lg-8">
                <div class="input-group" id="divBirthday">
                    <span class="input-group-addon"><i class="fa fa-birthday-cake" aria-hidden="true"></i> Birthday: </span>
                    <input id="uBirthday" name="uBirthday" type="text" class="form-control ng-neutro" placeholder="@DateTime.Today.ToString("dd/MM/yyyy")" ng-model="uBirthday"/>
                </div>                       
            </div>
            <div class="col-lg-2"></div>
        </div>

        <script>
            $('#divBirthday input').datepicker({});
        </script>

        <!--DESCRIPTION-->
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="form-group col-lg-8">
                <div class="input-group"  ng-class="{'has-error':userForm.uDescription.$error}">
                    <span class="input-group-addon"><i class="fa fa-comment-o" aria-hidden="true"></i> Description: </span>
                    <textarea id="uDescripcion" name="uDescripcion" type="text" class="form-control ng-neutro" placeholder="User Description" ng-model="uDescripcion" ng-maxlength="200"/>
                </div>
                <p ng-show="userForm.uDescripcion.$error.maxlength" class="help-block">Description too long</p>    
            </div>
            <div class="col-lg-2"></div>
        </div>
      
        <div class="form-group text-center">
            <input type="submit" class="btn btn-primary btn-lg" ng-click="actualizarUserInfo()" value="Save Changes" />
            <br />
        </div>
    </form>
</div>

<script>
    $('input, textarea').change(function () {
        $(this).addClass('dirty');
    })
</script>