@model  FitocracyFinal.ViewModels.EntrenamientoEntrenadoresVM
@using FitocracyFinal.Models

<style>
    .redondo img {
        border: 2px solid grey;
        margin: 0;
        padding: 0;
        border-radius: 800px;
        overflow: hidden;
    }
</style>
@{
    Entrenadores entrenador = Model.entrenador;
    Entrenamientos entrenamiento = Model.entrenamiento;
}

<div class=" row" style="height:600px; position:relative; background:#fff; padding-top:25px;">
    <div class="col-lg-12">
        <a href="@Url.Action("detalleEntrenamiento", "Coach", new { datos = Model})">
            <img src='@Url.Action("showFotoEntrenamiento", "Fotos", new { id = entrenamiento._id })' height="300" width="300" />
        </a>
    </div>

    <div class="col-lg-12 redondo" style="display:inline-block; background:#724788; color:#fff; width:300px; vertical-align:top; text-align:left; padding:10px">
        <img src='@Url.Action("showEntrenador", "Fotos", new { id = entrenador._id})' height="50" width="50" />
        <p style="font-size:medium; display:inline"> @entrenador.Nombre @entrenador.Apellidos</p>
    </div>

    <h3>@entrenamiento.NombreEntrenamiento</h3>
    <p>@entrenamiento.Descripcion</p>

    <div class="col-lg-12 center">
        <a href="@Url.Action("detalleEntrenamiento", "Coach", new { datos = Model})">
            <input type="submit" value=" $ @entrenamiento.Precio / month" class="btn button-entrenamiento btn-block" />
        </a>
    </div>
</div>



