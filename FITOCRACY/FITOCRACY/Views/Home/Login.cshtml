<div class="jumbotron text-center">
    <h1>LOGIN</h1>
    <div class="from-group" ng-controller="loginController">
        <form novalidate name="loginForm" >
            <div class="form-group">
                <label>Username</label>
                <input name="username" class="form-control" ng-model="username" required />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input name="password" type="password" class="form-control" ng-model="password" required />
            </div>
            <div class="text-center">
                <button class="btn btn-default" type="submit" ng-disabled="loginForm.$invalid">Submit</button>
            </div>
        </form>
    </div>
</div>
