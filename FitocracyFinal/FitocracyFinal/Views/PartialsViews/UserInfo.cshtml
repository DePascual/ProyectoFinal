                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="uPass" name="uPass" type="password" class="form-control" placeholder="*********" ng-model="uPass" ng-required="true" ng-pattern="/^(?=.*\d)(?=.*[a-zA-Z])[a-zA-Z0-9]{7,}$/" />
                    </div>
                    <p ng-show="userForm.uPass.$invalid && !userForm.uPass.$touched" class="help-block">Enter a valid password</p>
                </div>
                <div class="col-lg-2"></div>
            </div>*@

        <div class="form-group text-center">
            <input type="submit" class="btn btn-primary btn-lg" ng-click="actualizar(userForm.$valid)" ng-disabled="userForm.$invalid" value="Submit" />
            <br />
        </div>
    </form>
</div>
